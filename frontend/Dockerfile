FROM nginx:alpine

# ============================
# ğŸš€ Inicio Build Frontend
# ============================
RUN echo "" \
    && echo "===== ğŸš€ Inicio Build Frontend =====" \
    && echo ""

# ----------------------------
# ğŸ§¹ Limpiar HTML default
# ----------------------------
RUN echo "" \
    && echo "=> ğŸ§¹ Limpiando HTML default..." \
    && rm -rf /usr/share/nginx/html/* \
    && echo "" \
    && echo "âœ” HTML default eliminado âœ…" \
    && echo ""

# ----------------------------
# ğŸ“‚ Crear estructura de carpetas
# ----------------------------
RUN echo "" \
    && echo "=> ğŸ“‚ Creando estructura de directorios..." \
    && mkdir -p /usr/share/nginx/html/assets/css /usr/share/nginx/html/assets/js \
    && echo "" \
    && echo "âœ” Estructura creada âœ…" \
    && echo ""

# ----------------------------
# ğŸ“„ Copiar archivos estÃ¡ticos
# ----------------------------
RUN echo "" \
    && echo "=> ğŸ“„ Copiando archivos estÃ¡ticos..."
COPY html/ /usr/share/nginx/html/
COPY assets/ /usr/share/nginx/html/assets/
COPY nginx.conf /etc/nginx/conf.d/default.conf

# ----------------------------
# ğŸ”‘ Ajustar permisos
# ----------------------------
RUN echo "" \
    && echo "=> ğŸ”‘ Ajustando permisos..." \
    && chmod -R 755 /usr/share/nginx/html/ \
    && echo "" \
    && echo "âœ” Permisos ajustados âœ…" \
    && echo ""

# ----------------------------
# ğŸ” VerificaciÃ³n final
# ----------------------------
RUN echo "" \
    && echo "=> ğŸ” Verificando archivos copiados..." \
    && ls -la /usr/share/nginx/html/ \
    && ls -la /usr/share/nginx/html/assets/ \
    && ls -la /usr/share/nginx/html/assets/js/ \
    && ls -la /usr/share/nginx/html/assets/css/ \
    && echo "" \
    && echo "âœ” Archivos verificados âœ…" \
    && echo ""

# ----------------------------
# ğŸŒ Exponer puerto
# ----------------------------
EXPOSE 80

# ----------------------------
# âœ… Resumen Build Frontend
# ----------------------------
RUN echo "" \
    && echo "===== Frontend Build Completo! =====" \
    && echo "" \
    && echo "âœ” Archivos estÃ¡ticos copiados" \
    && echo "âœ” Estructura de directorios correcta" \
    && echo "ğŸŒ URL de acceso: http://localhost:8080 (frontend)" \
    && echo ""

CMD ["nginx", "-g", "daemon off;"]

