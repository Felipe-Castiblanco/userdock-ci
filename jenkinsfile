pipeline {
    agent any

    environment {
        DOCKER_HOST = 'unix:///var/run/docker.sock'
    }

    stages {
        stage("Construir los contenedores") {
            steps {
                sh 'docker-compose build'
            }
        }

        stage("Desplegar") {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }

    post {
        always {
            echo "========always========"
        }
        success {
            echo "========A executed successfully========"
        }
        failure {
            echo "========A execution failed========"
        }
    }
}
